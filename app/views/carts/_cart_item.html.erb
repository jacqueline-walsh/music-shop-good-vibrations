<% if !@order_item.nil? && @order_item.errors.any? %>
	<ul>
		<% @order_item.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<% if @order_items.size>0 %>
	<% @order_items.each do |item| %>
			<div class="row">
				<div class="col-sm-8">
					<table>
					<tr>
						<td><%= image_tag item.listing.image.url(:thumb) %></td>
						<td style="padding-left: 20px;"><h3><%= item.listing.title %></h3>			
						<%= item.listing.description %></td>
					</tr>
				</table>
				</div>
				<div class="col-sm-4">
					<div class="pull-right">
					<%= form_for(item, remote: true) do |f| %>
						<%= f.hidden_field @listing_id, value: item.listing.id %>
						<p><%= number_to_currency(item.listing.price, :locale => :ir) %></p>
						<div class="form-group">
							<%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
						</div>
						<div class="btn-group">
							<%= f.submit "Update Quantity", class: 'btn btn-primary' %>
							<%= link_to "Delete", item, method: :delete, remote: true, class: 'btn btn-danger'  %>
						</div>
						<span>Total Price: <%= number_to_currency(item.total_price, :locale => :ir) %></span>
					<% end %>
					</div>
				</div>
			</div>
	<% end %>
<% else %>
	
<% end %>