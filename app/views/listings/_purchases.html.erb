<% if user_signed_in? %>     

	<!-- Button trigger modal -->
	<button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#exampleModalCenter">
	  Purchase History
	</button>

	<!-- Modal -->
	<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
	  <div class="modal-dialog modal-dialog-centered" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLongTitle"><%= "#{current_user.first_name} #{current_user.last_name}"%> - Purchase History</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>


	      <div class="modal-body">
	      	<table class="table table-bordered">
						<tr class="centre">
							<thead class="thead-light">
							  <th>Image</th>
							  <th>Item</th>
							  <th>Price</th>
							</thead>
						</tr>
				
						<% @history.each do |item| %>
							<div class="row">
							<tr class="centre">
								<td><%= image_tag item.listing.image.url(:thumb) %></td>
								<td style="padding-left: 20px;"><h3><%= item.listing.title %></h3>	
								<td><%= number_to_currency(item.listing.price, :locale => :ir) %></td>
							</tr>
							</div>
						<% end %>
					</table>
	      </div>

	      <div class="modal-footer">
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>


