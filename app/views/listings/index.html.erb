
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="centre">Where Good Vibes Play...</h1>
    <div class="banner-img centre"><%= image_tag('banner.gif')%></div>
  </div>
</div>

<div class="centre"><%= render 'listings/purchase-history'%>
  <%= link_to "Shop Now", shop_path, class:"btn btn-danger btn-lg"  %></div><br/>

<%= render 'listings/mailchimp'%>
<div class="centre">
  <div class="row">
    <% @listings.each do |listing| %>    
      <div class="col-md-3">
        <div class="img-thumbnail">
          <%= link_to image_tag(listing.image.url(:medium)), listing, class:"img-fluid" %>
          <div class="caption">
            <h3><%= listing.title %></h3>
            <p>Artist: <%= listing.artist %></p>
            <p>Type: <%= listing.version %></p>   
            <p><%= number_to_currency(listing.price, :locale => :ir) %></p>
            <p><%="Sold by: #{listing.user.first_name} #{listing.user.last_name}"%></p>
         </div>
        </div>
     </div>
    <% end %>
  </div>
</div>


