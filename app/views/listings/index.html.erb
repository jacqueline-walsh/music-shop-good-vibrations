
<div class="jumbotron jumbotron-fluid shadow">
</div>

<div class="centre"><%= render 'listings/purchases'%>
  <%= link_to "Shop Now", shop_path, class:"btn btn-danger btn-lg"  %></div><br/>

<%= render 'listings/mailchimp'%>
<br>
			<!-- front content -->
 <div class="centre">
  <div class="row">
    <% @listings.each do |listing| %>    
      <div class="col-lg col-md">
	      
				<div class="flip-container" ontouchstart="this.classList.toggle('hover');">
					<div class="flipper">
						<div class="front">	      
	      
							<div class="img-thumbnail">
							<%= link_to image_tag(listing.image.url(:medium)), listing, class:"img-fluid img-med" %>
								<div class="caption">
									<h3><%= listing.title %></h3>
									<p>Artist: <%= listing.artist %></p>
									<p>Type: <%= listing.category.name %></p>   
									<p><%= number_to_currency(listing.price, :locale => :ir) %></p>
									<p><%="Sold by: #{listing.user.first_name} #{listing.user.last_name}"%></p>
          			</div>  <!-- end caption -->
             	</div> <!-- end thumbnail -->
  					</div> <!-- end front -->
  					
						<div class="back centre">
							<h3>Description</h3>
							<span style="center">*****</span>
							<p><%= listing.description %></p>
							<span style="center">*****</span>
						</div>
						
					</div>  <!-- end flipper -->
				</div>  <!-- end flip container -->        
     </div> <!-- end col -->
    <% end %>  <!-- end loop -->
  </div> <!-- end row -->
</div> <!-- end centre -->
<br/>

<% if user_signed_in? %>
  <p><%= link_to 'New Listing', new_listing_path, class:"btn btn-link" %></p>
<% end %>