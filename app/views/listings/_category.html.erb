<div class="category">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to "Add New Item", new_listing_path, class:"btn-link" %></li>
        <% end %>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Categories <span class="caret"></span></a>
          <ul class="dropdown-menu  centre" role="menu">
	          <%= link_to 'all', shop_path, class:"btn-link" %>
            <% Category.all.each do |category| %>
              <li class="<%= 'active' if params[:category] == category.name %>">
                <%= link_to category.name, shop_path(category: category.name), class:"btn-link" %>
              </li>
            <% end %>
          </ul>
        </li> 
      </ul>
</div>