<% if @listings.length ==0 %>
no products were found 
<% end %>



<% @listings.each do |listing| %>    
      <div class="col-md-3">
        <div class="img-thumbnail">
          <%= link_to image_tag(listing.image.url(:medium)), listing, class:"img-fluid" %>
          <div class="caption">
            <h3><%= listing.title %></h3>
            <p>Artist: <%= listing.artist %></p>
            <p>Type: <%= listing.category.name %></p>   
            <p><%= number_to_currency(listing.price, :locale => :ir) %></p>
            <p><%="Sold by: #{listing.user.first_name} #{listing.user.last_name}"%></p>
         </div>
        </div>
     </div>
    <% end %>