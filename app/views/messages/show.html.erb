<div class="col-md-8 offset-2">
	<div class="message-show">
		<h2><%= @message.title %></h2>
		<p class="message-posted-by">Posted by: <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</p>
		<p class="message-desc"><%= @message.description %></h2>

		<h3>Comments:</h3>
		<%= render @message.comments %>

		<h3 class="reply-to-msg">Reply to Message</h3>
		<%= render 'comments/form'%>

		<div class="links btn-group">
			<p><%= link_to "Back", messages_path, class:"btn btn-light" %> 
			<% if user_signed_in? %>
				<% if @message.user_id == current_user.id || current_user.admin? %>
					<%= link_to "Edit", edit_message_path, class:"btn btn-light"  %> 
					<%= link_to "Delete", message_path(@message), class:"btn btn-light", method: :delete, data: {confirm: 'Are you sure'} %></p>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<br/>